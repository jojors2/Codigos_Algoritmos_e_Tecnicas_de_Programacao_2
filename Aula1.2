#include <stdlib.h>
#include <stdio.h>
#include <string.h>
void strrev (char str[]){
  int tamanho = strlen (str);
  int i, j;
  char temp;
  for (i = 0, j = tamanho - 1; i < j; i++, j--){
    temp = str[i];
    str [i] = str [j];
    str [j] = temp;
  }
}
int main (){
  char palavra [50];
  printf ("Digite uma palavra:\n");
  scanf ("%49s", palavra);
  strrev (palavra);
  printf ("A palavra invertida eh:\n%s", palavra);

  return 0;
}
